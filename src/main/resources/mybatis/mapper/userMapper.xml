<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shimao.jsbase.repository.UserRepository">

    <resultMap id="UserResultMap" type="com.shimao.jsbase.entity.User">

    </resultMap>

    <select id="getAll" resultMap="UserResultMap">
        SELECT *
        FROM user
    </select>

    <insert id="insert" parameterType="com.shimao.jsbase.entity.User">
        INSERT INTO user
        (
        `user_name`,
        `password`,
        `create_time`,
        `update_time`,
        `is_active`)
        VALUES
        (
        #{user_name},
        #{password},
        #{create_time},
        #{update_time},
        #{is_active}
        );
    </insert>

    <update id="update" parameterType="com.shimao.jsbase.entity.User">
        UPDATE user
        SET
        `user_name` = #{user_name},
        `password` =  #{password},
        `create_time` = #{create_time},
        `update_time` = #{update_time},
        `is_active` = #{is_active}
        WHERE `id` = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM user
        WHERE id=#{id}
    </delete>

</mapper>
